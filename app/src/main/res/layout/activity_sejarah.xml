<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sejarah"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/bekfrond"
    tools:context="com.example.arinal.mobscout.sejarahActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sejarah Pramuka Dunia"
                android:id="@+id/sejarahPramukaDunia"
                android:background="@color/btnColor"
                android:layout_margin="3dp"
                android:textColor="@color/putih"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sejarah Pramuka Indonesia"
                android:id="@+id/sejarahPramukaIndo"
                android:background="@color/btnColor"
                android:layout_margin="3dp"
                android:textColor="@color/putih"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sejarah Sandi"
                android:id="@+id/sejarahSandi"
                android:background="@color/btnColor"
                android:layout_margin="3dp"
                android:textColor="@color/putih"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sejarah Morse"
                android:id="@+id/sejarahMorse"
                android:background="@color/btnColor"
                android:layout_margin="3dp"
                android:textColor="@color/putih"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sejarah Lambang Pramuka"
                android:id="@+id/sejarahLambangPramuka"
                android:background="@color/btnColor"
                android:layout_margin="3dp"
                android:textColor="@color/putih"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Penemu Morse"
                android:id="@+id/penemuMorse"
                android:background="@color/btnColor"
                android:layout_margin="3dp"
                android:textColor="@color/putih"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Penemu Semaphore"
                android:id="@+id/penemuSemaphore"
                android:background="@color/btnColor"
                android:layout_margin="3dp"
                android:textColor="@color/putih"
                android:textStyle="bold"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kegunaan Semaphore"
                android:id="@+id/gunaSemaphore"
                android:background="@color/btnColor"
                android:layout_margin="3dp"
                android:textColor="@color/putih"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
