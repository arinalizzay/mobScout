<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upacara"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/bekfrond"
    tools:context="com.example.arinal.mobscout.AwalSoalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="50dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Datang Di Fitur Latihan Soal"
            android:textColor="@color/putih"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukan nama pemain"
            android:textColor="@color/putih"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="nama pemain"
            android:id="@+id/username"
            android:textColor="@color/putih"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mulai Permainan"
            android:id="@+id/start"
            android:textAllCaps="false"
            android:background="@color/btnColor"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang"
            android:id="@+id/about"
            android:textAllCaps="false"
            android:background="@color/btnColor"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keluar"
            android:id="@+id/exit"
            android:textAllCaps="false"
            android:background="@color/btnColor"
            android:textColor="@android:color/white"
            android:layout_margin="5dp"
            />
    </LinearLayout>

</LinearLayout>
